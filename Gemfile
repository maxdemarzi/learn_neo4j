source 'https://rubygems.org'

gem 'rails', '3.2.2'

gem 'neography'
gem 'activerecord-neo4j-adapter', :git => 'git://github.com/yournextleap/activerecord-neo4j-adapter.git'

gem 'haml'
gem 'haml-rails'
gem 'jquery-rails'
gem 'simple_form'

gem 'rspec-rails', :group => [:development, :test]
gem 'net-http-spy', :group => [:development, :test]

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
  gem 'twitter-bootstrap-rails'
end

group :test do
  gem 'factory_girl_rails'
  gem 'cucumber-rails'
  gem 'capybara'
  gem 'email_spec'
end

group :production do
  gem 'thin'
end


